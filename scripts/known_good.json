{
    "repos": [
        {
            "name": "Vulkan-Headers",
            "url": "https://github.com/KhronosGroup/VulkanSC-Headers.git",
            "sub_dir": "Vulkan-Headers",
            "build_dir": "Vulkan-Headers/build",
            "install_dir": "Vulkan-Headers/build/install",
            "cmake_options": [
                "-DGEN_VULKANSC_COMBINED=ON"
            ],
            "commit": "8dc95dcb55ccd85c57c8c9ead4e2bb023815bc01"
        },
        {
            "name": "Vulkan-Utility-Libraries",
            "url": "https://github.com/KhronosGroup/VulkanSC-Utility-Libraries.git",
            "sub_dir": "Vulkan-Utility-Libraries",
            "build_dir": "Vulkan-Utility-Libraries/build",
            "install_dir": "Vulkan-Utility-Libraries/build/install",
            "commit": "vksc1.0.18",
            "cmake_options": [
                "-DCMAKE_MSVC_RUNTIME_LIBRARY=MultiThreaded$<$<CONFIG:Debug>:Debug>"
            ],
            "deps": [
                {
                    "var_name": "VULKAN_HEADERS_INSTALL_DIR",
                    "repo_name": "Vulkan-Headers"
                }
            ]
        },
        {
            "name": "jsoncpp",
            "url": "https://github.com/open-source-parsers/jsoncpp.git",
            "sub_dir": "jsoncpp",
            "build_dir": "jsoncpp/build",
            "install_dir": "jsoncpp/build/install",
            "commit": "1.9.6",
            "cmake_options": [
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON",
                "-DJSONCPP_WITH_TESTS=OFF",
                "-DJSONCPP_WITH_POST_BUILD_UNITTEST=OFF",
                "-DJSONCPP_WITH_WARNING_AS_ERROR=OFF",
                "-DJSONCPP_WITH_PKGCONFIG_SUPPORT=OFF",
                "-DJSONCPP_STATIC_WINDOWS_RUNTIME=ON",
                "-DBUILD_SHARED_LIBS=OFF",
                "-DBUILD_STATIC_LIBS=ON",
                "-DBUILD_OBJECT_LIBS=OFF"
            ]
        },
        {
            "name": "valijson",
            "url": "https://github.com/tristanpenman/valijson.git",
            "sub_dir": "valijson",
            "build_dir": "valijson/build",
            "install_dir": "valijson/build/install",
            "commit": "v1.0.6"
        },
        {
            "name": "googletest",
            "url": "https://github.com/google/googletest.git",
            "sub_dir": "googletest",
            "build_dir": "googletest/build",
            "install_dir": "googletest/build/install",
            "cmake_options": [
                "-DBUILD_GMOCK=OFF",
                "-Dgtest_force_shared_crt=OFF",
                "-DBUILD_SHARED_LIBS=OFF"
            ],
            "commit": "v1.14.0",
            "optional": [
                "tests"
            ]
        },
        {
            "name": "Vulkan-Loader",
            "api": "vulkansc",
            "url": "https://github.com/KhronosGroup/VulkanSC-Loader.git",
            "sub_dir": "Vulkan-Loader",
            "build_dir": "Vulkan-Loader/build",
            "install_dir": "Vulkan-Loader/build/install",
            "cmake_options": [
                "-DLOADER_USE_UNSAFE_FILE_SEARCH=ON"
            ],
            "commit": "vksc1.0.18",
            "optional": [
                "tests"
            ],
            "build_platforms": [
                "windows",
                "linux",
                "darwin"
            ],
            "deps": [
                {
                    "var_name": "VULKAN_HEADERS_INSTALL_DIR",
                    "repo_name": "Vulkan-Headers"
                }
            ]
        },
        {
            "name": "SPIRV-Headers",
            "url": "https://github.com/KhronosGroup/SPIRV-Headers.git",
            "sub_dir": "SPIRV-Headers",
            "build_dir": "SPIRV-Headers/build",
            "install_dir": "SPIRV-Headers/build/install",
            "commit": "09913f088a1197aba4aefd300a876b2ebbaa3391",
            "optional": [
                "tests"
            ]
        },
        {
            "name": "SPIRV-Tools",
            "url": "https://github.com/KhronosGroup/SPIRV-Tools.git",
            "sub_dir": "SPIRV-Tools",
            "build_dir": "SPIRV-Tools/build",
            "install_dir": "SPIRV-Tools/build/install",
            "cmake_options": [
                "-DSPIRV-Headers_SOURCE_DIR={repo_dir}/../SPIRV-Headers",
                "-DSPIRV_WERROR=OFF",
                "-DSPIRV_SKIP_TESTS=ON",
                "-DSPIRV_SKIP_EXECUTABLES=ON",
                "-DCMAKE_MSVC_RUNTIME_LIBRARY=MultiThreaded$<$<CONFIG:Debug>:Debug>"
            ],
            "commit": "f289d047f49fb60488301ec62bafab85573668cc",
            "optional": [
                "tests"
            ]
        },
        {
            "name": "volk",
            "url": "https://github.com/zeux/volk",
            "sub_dir": "volk",
            "build_dir": "volk/build",
            "install_dir": "volk/build/install",
            "cmake_options": [
                "-DVOLK_INSTALL=ON"
            ],
            "commit": "vulkan-sdk-1.4.309",
            "optional": [
                "tests"
            ],
            "deps": [
                {
                    "var_name": "VULKAN_HEADERS_INSTALL_DIR",
                    "repo_name": "Vulkan-Headers"
                }
            ]
        },
        {
            "name": "Vulkan-Tools",
            "api": "vulkansc",
            "url": "https://github.com/KhronosGroup/VulkanSC-Tools.git",
            "sub_dir": "Vulkan-Tools",
            "build_dir": "Vulkan-Tools/build",
            "install_dir": "Vulkan-Tools/build/install",
            "commit": "vksc1.0.18",
            "cmake_options": [
                "-DBUILD_CUBE=OFF",
                "-DBUILD_VULKAN_INFO=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_VKSC_DEVSIM=OFF",
                "-DINSTALL_ICD=ON"
            ],
            "optional": [
                "tests"
            ],
            "deps": [
                {
                    "var_name": "VULKAN_HEADERS_INSTALL_DIR",
                    "repo_name": "Vulkan-Headers"
                },
                {
                    "var_name": "VOLK_INSTALL_DIR",
                    "repo_name": "volk"
                },
                {
                    "var_name": "VULKAN_UTILITY_LIBRARIES_INSTALL_DIR",
                    "repo_name": "Vulkan-Utility-Libraries"
                },
                {
                    "var_name": "JSONCPP_INSTALL_DIR",
                    "repo_name": "jsoncpp"
                },
                {
                    "var_name": "VALIJSON_INSTALL_DIR",
                    "repo_name": "valijson"
                }
            ]
        },
        {
            "name": "Vulkan-ValidationLayers",
            "api": "vulkansc",
            "url": "https://github.com/KhronosGroup/VulkanSC-ValidationLayers.git",
            "sub_dir": "Vulkan-ValidationLayers",
            "build_dir": "Vulkan-ValidationLayers/build",
            "install_dir": "Vulkan-ValidationLayers/build/install",
            "commit": "vksc1.0.18",
            "optional": [
                "tests"
            ],
            "cmake_options": [
                "-DCMAKE_MSVC_RUNTIME_LIBRARY=MultiThreaded$<$<CONFIG:Debug>:Debug>"
            ],
            "deps": [
                {
                    "var_name": "JSONCPP_INSTALL_DIR",
                    "repo_name": "jsoncpp"
                },
                {
                    "var_name": "VULKAN_HEADERS_INSTALL_DIR",
                    "repo_name": "Vulkan-Headers"
                },
                {
                    "var_name": "VULKAN_UTILITY_LIBRARIES_INSTALL_DIR",
                    "repo_name": "Vulkan-Utility-Libraries"
                },
                {
                    "var_name": "SPIRV_HEADERS_INSTALL_DIR",
                    "repo_name": "SPIRV-Headers"
                },
                {
                    "var_name": "SPIRV_TOOLS_INSTALL_DIR",
                    "repo_name": "SPIRV-Tools"
                }
            ]
        }
    ],
    "install_names": {
        "Vulkan-Headers": "VULKAN_HEADERS_INSTALL_DIR",
        "Vulkan-Utility-Libraries": "VULKAN_UTILITY_LIBRARIES_INSTALL_DIR",
        "jsoncpp": "JSONCPP_INSTALL_DIR",
        "valijson": "VALIJSON_INSTALL_DIR",
        "googletest": "GOOGLETEST_INSTALL_DIR",
        "Vulkan-Loader": "VULKAN_LOADER_INSTALL_DIR",
        "SPIRV-Headers": "SPIRV_HEADERS_INSTALL_DIR",
        "SPIRV-Tools": "SPIRV_TOOLS_INSTALL_DIR",
        "volk": "VOLK_INSTALL_DIR",
        "Vulkan-Tools": "VULKAN_TOOLS_INSTALL_DIR",
        "Vulkan-ValidationLayers": "VULKAN_VALIDATION_LAYERS_INSTALL_DIR"
    }
}
